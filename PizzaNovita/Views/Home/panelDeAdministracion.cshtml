<!DOCTYPE html>
<html>
<head>
    <title>Panel de administración</title>
    <meta charset="utf-8" />
    <style>

        .cuadro {
            border-radius: 0.3em;
            border: 1px solid #aaa;
            margin: 1em;
            padding: 1em;
            height: 8em;
            box-shadow: 7px 7px 0px 0px #aaa;
            Background: orangered;
            text-align: center;
        }

        .dobleLinea {
            width: 28em;
        }

        .cuadro > h1 > a {
            color:#FFF;
            Background: transparent;
        }

    </style>
</head>

<body>
    <br />
    <h1 style="text-align:center">Administración</h1>
    <div class="row d-flex flex-wrap align-items-center">

        <div class="col-md-4">
            <div class="cuadro">
                <h1>@Html.ActionLink("Agregar Pizza", "agregarPizza", "Comestible")</h1>
            </div>
        </div>

        <div class="col-md-4">
            <div class="cuadro">
                <h1>@Html.ActionLink("Agregar Bebida", "agregarBebida", "Comestible")</h1>
            </div>
        </div>

        <div class="col-md-4">
            <div class="cuadro dobleLinea">
                <h1>@Html.ActionLink("Agregar Acompañante", "agregarAcompanante", "Comestible")</h1>
            </div>
        </div>

        <div class="col-md-4">
            <div class="cuadro">
                <h1>@Html.ActionLink("Agregar Combos", "agregarCombo", "Combo")</h1>
            </div>
        </div>

        <div class="col-md-4">
            <div class="cuadro">
               <h1> @Html.ActionLink("Lista de Pedidos", "listaPedidos", "Pedido")</h1>
            </div>
        </div>
        <br />
    </div>
</body>
</html>